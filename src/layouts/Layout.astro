---
import Header from '../components/Header.astro'

interface Props {
  title: string
  description: string
}

const { title, description } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
		<meta charset="UTF-8" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta
			name="keywords"
			content="json, query, language, jsonquery, json query, lightweight, flexible, expandable, simple"
		/>
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/png" href="/frog-756900-100.png" />
		<meta name="generator" content={Astro.generator} />
  </head>
  <body>
		<div class="app">
			<Header />
			<slot />
		</div>
  </body>
</html>

<style>
  :root {
		--theme-color: #d5f3bb;
		--theme-color-highlight: #e1f6ce;
		--font-family: ubuntu, arial, sans-serif;
		--font-size: 12pt;
		--font-family-mono: consolas, menlo, monaco, 'Ubuntu Mono', 'source-code-pro', monospace;
		--font-size-mono: 13px;
		--background-color: white;
		--color: #4d4d4d;
		--header-text-color: #222b00;
		--link-color: #3fbdd6;
		--link-color-highlight: #37a4b9;
		--link-color-white-highlight: #f5f5f5;
		--error-color: #f65252;
		--padding: 10px;
		--button-margin: 5px;
		--button-border: 1px solid #bfbfbf;
		--border-radius: 3px;
		--input-border: 1px solid #bfbfbf;
		--tab-border-width: 5px;
		--table-cell-border: 1px solid #e5e5e5;
		--table-cell-padding: 5px 10px;
		--code-background: #f0f0f0;
		--outline-background: #f5f5f5;
		--outline-border-radius: 10px;
		--overlay-background: rgba(0, 0, 0, 0.3);
  }

  html,
  body {
		width: 100%;
		height: 100%;
		margin: 0;
		padding: 0;
		overflow: hidden;
  }

  body {
		display: flex;
		justify-content: center;
		font-family: var(--font-family);
		font-size: var(--font-size);
		color: var(--color);
  }

  .app {
		flex: 1;
		padding: 0;
		display: flex;
		flex-direction: column;
		overflow: auto;
		scroll-behavior: smooth;
		background: var(--background-color);
  }

  :global(a) {
		color: var(--link-color);
  }

  :global(a:hover) {
		color: var(--link-color-highlight);
  }

	:global(p) {
		line-height: 1.5em;
		overflow: auto;
	}

  :global(h1),
  :global(h2),
  :global(h3) {
		margin-top: 2em;
		scroll-margin-top: 1em;
  }

	:global(h1:first-child) {
		margin-top: 0;
	}

  :global(h1 a),
  :global(h2 a),
  :global(h3 a) {
		color: var(--color);
		text-decoration: none;
		position: relative;
  }

  :global(h1 a:hover),
  :global(h2 a:hover),
  :global(h3 a:hover) {
		text-decoration: underline;
  }

  :global(h1 a:hover:before),
  :global(h2 a:hover:before),
  :global(h3 a:hover:before) {
		position: absolute;
		top: 0;
		left: -1em;
		content: '# ';
  }

	:global(h1 code),
	:global(h2 code),
	:global(h3 code) {
		font-size: inherit;
	}

	:global(pre.astro-code) {
		padding: 5px;
		border-radius: 3px;
		line-height: 1.4em;
		font-size: var(--font-size-mono);
	}

	:global(table code),
	:global(p code) {
		background: var(--code-background);
		padding: 2px 5px;
		border-radius: var(--border-radius);
		display: inline-block;
		font-size: var(--font-size-mono);
	}

	:global(pre code) {
		background: none;
	}

	:global(table) {
		border-collapse: collapse;
	}
	:global(table th),
	:global(table td) {
		border: var(--table-cell-border);
		padding: var(--table-cell-padding);
	}
</style>
